{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "label": "watch-plugin",
      "type": "shell",
      "command": "node",
      "args": [
        "node_modules/typescript/bin/tsc",
        "--project",
        "src/library",
        "--watch"
      ],
      "isBackground": true,
      "group": "build",
      "problemMatcher": "$tsc-watch"
    }
  ]
}
